# ============================================
# Hyderabad Clothing E-Commerce Platform
# Backend Environment Configuration
# ============================================
# IMPORTANT: Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!
# ============================================

# Server Configuration
NODE_ENV=development
PORT=5001
API_VERSION=v1

# Database Configuration
# In production, use strong credentials and consider connection pooling via PgBouncer
DATABASE_URL=postgresql://username:password@localhost:5432/hyderabad_clothing
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hyderabad_clothing
DB_USER=your_db_user
DB_PASSWORD=your_secure_db_password

# Redis Configuration (Required for token blacklisting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# JWT Configuration
# CRITICAL: Generate secure random secrets for production!
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('base64'))"
JWT_SECRET=GENERATE_SECURE_SECRET_MIN_64_CHARS
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=GENERATE_DIFFERENT_SECURE_SECRET_MIN_64_CHARS
JWT_REFRESH_EXPIRES_IN=7d

# Cookie Configuration
COOKIE_SECRET=GENERATE_SECURE_SECRET_MIN_32_CHARS
COOKIE_DOMAIN=localhost

# Razorpay Configuration
# Get from https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your_razorpay_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret

# Twilio Configuration (WhatsApp)
# Get from https://console.twilio.com
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# SendGrid Configuration
# Get from https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxx
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=Hyderabad Clothing

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=AKIAxxxxxxxxxxxxxxxx
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=your-bucket-name

# Shiprocket Configuration
SHIPROCKET_EMAIL=your@email.com
SHIPROCKET_PASSWORD=your_shiprocket_password
SHIPROCKET_API_URL=https://apiv2.shiprocket.in/v1/external

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:4000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_SALT_ROUNDS=12
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4000

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Business Logic
DEFAULT_COMMISSION_RATE=0.07
SELLER_PAYOUT_CYCLE_DAYS=7
FRAUD_DETECTION_THRESHOLD=0.70
MAX_RETURN_RATE_THRESHOLD=0.80

# Password Reset
PASSWORD_RESET_EXPIRES_IN=3600000
